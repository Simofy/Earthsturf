    <div class="container-login100">
        <div class="wrap-login100">
            <form ref='uploadForm' class="login100-form validate-form" id='login_auth' action='/signupForm' method='post'>
                <span class="login100-form-title p-b-26">
                    Sign Up for
                    <br />budget buddy
                </span>
                <span class="login100-form-title p-b-48">
                    <i class="fa fa-pie-chart"></i>
                </span>

                <div class="wrap-input100 validate-input" data-validate="Valid email is: a@b.c">
                    <input class="input100" type="email" name="email">
                    <span class="focus-input100" data-placeholder="Email"></span>
                </div>

                <div class="wrap-input100 validate-input" data-validate="Must contain atleast 3 characters">
                    <input class="input100" type="text" name="nickname" pattern=".{3,10}">
                    <span class="focus-input100" data-placeholder="Nickname"></span>
                </div>

                <div class="wrap-input100 validate-input" data-validate="Enter password" title="3 characters minimum">
                    <span class="btn-show-pass">
                        <i class="zmdi zmdi-eye"></i>
                    </span>
                    <input pattern=".{3,10}" class="input100" type="password" id="register_password" name="register_password" title="3 characters minimum">
                    <span class="focus-input100" data-placeholder="Password"></span>
                </div>

                <div class="wrap-input100 validate-input" data-validate="Re-enter password">
                    <span class="btn-show-pass">
                        <i class="zmdi zmdi-eye"></i>
                    </span>
                    <input pattern=".{3,10}" class="input100" type="password" id="register_pass_confirm" name="register_pass_confirm" title="3 characters minimum">
                    <span class="focus-input100" data-placeholder="Re-enter password"></span>
                </div>

                <p class="notice">
                    By clicking on Sign up, you agree to
                    <a href="/eng/legal/end-user-agreement/" target="_blank" style="color:#e66587">budget buddy's terms &amp; conditions</a>
                    and
                    <a href="/eng/legal/privacy-policy/" target="_blank" style="color: #f09458">privacy policy</a>
                </p>

                <div class="container-login100-form-btn">
                    <div class="wrap-login100-form-btn">
                        <div class="login100-form-bgbtn"></div>
                        <button class="login100-form-btn">
                            Sign up
                        </button>
                    </div>
                </div>

            </form>
            <div class="text-center p-t-15">
